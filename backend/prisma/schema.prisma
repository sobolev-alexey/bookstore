// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model BookMini {
  id              String @id @unique
  author          String?
  genre           String?
  cover           String?
  title           String?
  listPrice       Float?
  averageRating   Float?
  ratingsCount    Int?
  currency        String?
  country         String?
}

model Book {
  id              String @id @unique
  author          String?
  genre           String?
  subGenre        String?
  cover           String?
  title           String?
  pageCount       Int?
  listPrice       Float?
  averageRating   Float?
  ratingsCount    Int?
  currency        String?
  categories      String?
  authors         String?
  height          String?
  publisher       String?
  description     String?
  isbn            String?
  country         String?
  publishedDate   String?
  orders          Order[]
}

model Order {
  id              String @default(cuid()) @id
  books           Book[] @relation(references: [id])
  email           String
  address         Address?
}

model Address {
  id              Int @id @default(autoincrement())
  name            String
  address1        String
  address2        String?
  city            String
  state           String?
  postcode        String
  orderId         String @unique
  order           Order @relation(fields: [orderId], references: [id])
}